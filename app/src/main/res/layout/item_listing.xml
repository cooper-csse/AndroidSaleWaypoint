<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="84dp"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:paddingHorizontal="8dp"
	android:paddingVertical="16dp">

	<ImageView
		android:id="@+id/listing_store"
		android:layout_width="60dp"
		android:layout_height="match_parent"
		android:layout_marginEnd="8dp"
		android:src="@drawable/ic_steam"
		app:tint="@color/colorTextPrimary"/>

	<TextView
		android:id="@+id/listing_price_default"
		android:layout_width="90dp"
		android:layout_height="match_parent"
		android:layout_toRightOf="@id/listing_store"
		android:textAlignment="center"
		android:gravity="center"
		android:textSize="24sp"
		android:textColor="@color/colorTextSecondary"
		android:text="$9.99"/>

	<TextView
		android:id="@+id/listing_sale"
		android:layout_width="110dp"
		android:layout_height="match_parent"
		android:layout_toRightOf="@id/listing_price_default"
		android:textAlignment="center"
		android:gravity="center"
		android:paddingHorizontal="2dp"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:layout_marginHorizontal="4dp"
		android:textSize="24sp"
		android:textColor="@color/colorTextPrimary"
		android:background="@drawable/round_corners"
		android:text="25% Off"/>

	<TextView
		android:id="@+id/listing_price_sale"
		android:layout_width="90dp"
		android:layout_height="match_parent"
		android:layout_toRightOf="@id/listing_sale"
		android:textAlignment="center"
		android:gravity="center"
		android:textSize="24sp"
		android:textColor="@color/colorSale"
		android:text="$7.50"/>

</RelativeLayout>